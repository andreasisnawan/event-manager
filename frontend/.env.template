# Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# Application Configuration
# ============================================
VITE_APP_NAME=Event Manager
VITE_APP_VERSION=1.0.0

# ============================================
# API Configuration
# ============================================
# Backend API URL (required)
VITE_API_URL=http://localhost:8000/api

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# ============================================
# Authentication Configuration
# ============================================
# Number of days before auth cookie expires
VITE_AUTH_COOKIE_EXPIRE_DAYS=7

# Token refresh buffer in seconds (refresh token this many seconds before expiry)
VITE_AUTH_TOKEN_REFRESH_BUFFER=300

# ============================================
# Feature Flags
# ============================================
# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable debug mode (verbose logging)
VITE_ENABLE_DEBUG=false

# ============================================
# Environment Specific Settings
# ============================================
# Note: Vite automatically sets MODE based on the command:
# - 'development' when running 'vite' or 'vite dev'
# - 'production' when running 'vite build'
# You can override this with --mode flag
